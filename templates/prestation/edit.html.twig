{% extends 'base.html.twig' %}

{% block title %}Hello PerstationController!{% endblock %}

{% block body %}
    <h1>Modifier ma prestation</h1>

    <div>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6">
                {{ (form_row(form.title)) }}
            </div>
            <div class="col-md-6">
                {{ (form_row(form.price)) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                {{ (form_row(form.image)) }}
            </div>
            <div class="col-md-6">
                {{ (form_row(form.categories)) }}
            </div>
        </div>
        {{ (form_row(form.description)) }}
        {{ (form_row(form.content)) }}
        <button type="submit" class="btn btn-primary">Modifier</button>

        {{ form_end(form) }}
    </div>

{% endblock %}
