{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<div>
    <div class="d-flex justify-content-between align-items-center">
        <h1>Prestations</h1>

        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a href="{{ path('app_prestation_create') }}" class="btn btn-primary">Créér une prestation</a>
        {% endif %}
    </div>

    <div class="d-flex justify-content-start flex-wrap gap-4 mt-3">
        {% for prestation in prestations %}
        <div class="card" style="width: 22rem;">
            <a href="{{ path('app_prestation_show', {id: prestation.id}) }}">
                <img src="/upload/{{ prestation.image }}" class="card-img-top" alt="{{ prestation.title }}">
            </a>
            <div class="card-body">
                <h5 class="card-title">{{ prestation.title }}</h5>
                <p class="card-text">{{ prestation.description }}</p>
            </div>
        </div>
        {% endfor %}
    </div>

    <div class="navigation">
        {{ knp_pagination_render(prestations) }}
    </div>
</div>
{% endblock %}
