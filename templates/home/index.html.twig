{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div>
        <div class="d-flex justify-content-between align-items-center">
            <h1>Prestations</h1>

            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a href="{{ path('app_prestation_create') }}" class="btn btn-primary">Créér une prestation</a>
            {% endif %}
        </div>

        <!--creer le filter-->
        <div class="d-flex justify-content-end">
            <div class=" w-25">
                {{ form_start(form,{attr:{class:'filter'}}) }}
                    {{ form_row(form.name) }}
                    <h4>Catégories</h4>
                    {{ form_label(form.categories) }}
                    {{ form_widget(form.categories,{'attr':{'class':'form-control mb-3'}}) }}

                <button type="submit" class="btn btn-primary  w-100"> Filtrer</button>
                {{ form_end(form) }}
            </div>
        </div>
        <!-- c'est la card-->

        <div class="row mt-3">
            {% for prestation in prestations %}
                <div class="col-md-3">
                    <div class="card mb-4">
                        <a href="{{ path('app_prestation_show', {id: prestation.id}) }}">
                            {% if (prestation.image == 'https://picsum.photos/200/300') %}
                                <img src="{{ prestation.image }}" class="card-img-top" alt="{{ prestation.title }}"
                                     width="auto" height="250">
                            {% else %}
                                <img src="/upload/{{ prestation.image }}" class="card-img-top" alt="{{ prestation.title }}">
                            {% endif %}
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">{{ prestation.title }}</h5>
                            <p class="card-text">{{ prestation.description }}</p>
                        </div>
                        <div>
                            {% for c in prestation.categories %}
                                <em class="text-muted text-primary text-italic">#{{ c.name }}</em>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <!--pagination-->

        <div class="d-flex justify-content-center mt-3">
            {%  do prestations.setPageRange(4) %}
            {{ knp_pagination_render(prestations, 'layouts/_pagination.html.twig') }}
        </div>
    </div>
{% endblock %}
